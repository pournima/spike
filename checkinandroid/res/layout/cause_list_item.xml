<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/listItem" 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/relativelayoutCause">

	<TextView style="@style/listText" 
	    android:id="@+id/allCauseName"
	    android:layout_width="240dp"
	    android:singleLine="false" 
	    android:layout_alignParentLeft="true"
	    />
	
	<ImageView android:id="@+id/imagecheckBox"
		android:layout_width="22dp" 
		android:layout_height="22dp"
	    android:layout_toRightOf="@+id/allCauseName"
		android:background="@drawable/btn_check_off"
		android:layout_marginRight="10dp" 
		android:layout_marginLeft="10dp"
		android:layout_centerVertical="true"
		android:contentDescription="@string/desc_check" />
	
	<ImageView android:id="@+id/imageNextArrow"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true" 
		android:background="@drawable/nextarrow"
		android:layout_marginRight="15dp" 
		android:layout_centerVertical="true"
		 />
	
</RelativeLayout>
