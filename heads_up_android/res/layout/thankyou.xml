<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg" >

    <TextView
        android:id="@+id/textViewTopRaisedMoney"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_dark"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/raised"
        android:textColor="@color/white"
        android:textSize="6.5pt"
        android:visibility="gone" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollbarThankYouScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" >

        <LinearLayout
            android:id="@+id/linearThankyou"
            android:layout_width="match_parent"
            android:layout_height="332dp"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:contentDescription="@string/thank_you"
                android:src="@drawable/headsup_youve_checked_in" />

            <TextView
                android:id="@+id/txtThankYou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/thank_you"
                android:textColor="@color/black"
                android:textSize="8.0pt"
                android:textStyle="bold" />

            <!--
         <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"        
        android:text="@string/checkin_find"
        android:textColor="@color/blue"
        android:textSize="6.5pt"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>
            -->

            <Button
                android:id="@+id/btnFindMoreBusinesses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_findmore_busineeses"
                android:text="@string/find_more_businesses"
                android:textColor="@color/white"
                android:textSize="7.0pt"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txtPoweredBy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:gravity="center_horizontal"
        android:paddingTop="3dp"
        android:text="@string/powered_by"
        android:textColor="@color/gray_powered"
        android:textSize="5pt"
        android:textStyle="bold" />

</RelativeLayout>