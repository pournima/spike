<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent" xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout 
    android:id="@+id/relativeLayoutBus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp" >

    <TextView
        android:id="@+id/txtRulesTopMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:scrollHorizontally="true"
        android:text="@string/rule_book"
        android:textColor="@color/red_dark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ListView
        android:id="@android:id/list"
        style="@style/list"
        android:layout_width="fill_parent"
        android:layout_height="330dp"
        android:layout_below="@id/txtRulesTopMsg"
        android:footerDividersEnabled="false" >
    </ListView>

    <ImageButton
        android:id="@+id/imgBtnRuleBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/list"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/btn_rules_book"
        android:clickable="true"
        android:focusable="false" tools:ignore="ContentDescription">

    </ImageButton>

</RelativeLayout>

</ScrollView>